{
  "AWSEBDockerrunVersion": 2,
  "containerDEfinitions":[
    {
      "name": "client",
      "image": "mjondocker/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "mjondocker/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
    "name": "worker",
    "image": "mjondocker/multi-worker",
    "hostname": "worker",
    "essential": false
    },
    {
      "name": "nginx",
      "image": "mjondocker/multi-nginx",
      "essential":"true",
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}